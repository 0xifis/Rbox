<h1><%=h content_for(:title, "Sign In") %></h1>

<h2>Sign In</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>
  <%= devise_error_messages! %>
  <%= f.inputs do %>
  	<%= f.input :username %>
  	<%= f.input :password, as: :password %>
  <% end %>
  <div class="form-actions">
  <%= f.actions do %>
  	<%= f.action :submit, label: "Sign In", button_html: { class: "btn btn-primary" }, :wrapper_html => { :style => "display: inline; list-style-type:none;" } %>
  	<%= f.action :cancel, label: "cancel", button_html: { class: "btn" }, :wrapper_html => { :style => "display: inline; list-style-type:none;" } %>
  </div>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
