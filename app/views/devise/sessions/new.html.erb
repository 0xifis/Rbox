<h2>Sign in</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.inputs do %>
  	<%= f.input :username %>
  	<%= f.input :password, as: :password %>
  <% end %>
  <%= f.buttons %>
<% end %>

<%= render "devise/shared/links" %>
