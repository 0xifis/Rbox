<% title "Asset" %>

<p>
  <strong>User:</strong>
  <%= User.find(@asset.user_id).username %>
</p>

<p>
  <strong>File:</strong>
  <%= link_to @asset.file_name, download_url(@asset) %>
</p>

<p>
  <%= link_to "Edit", edit_asset_path(@asset) %> |
  <%= link_to "Destroy", @asset, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", assets_path %>
</p>
