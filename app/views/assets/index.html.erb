<% title "Assets" %>

<table class="table table-striped">
  <tr>
    <th>File Name</th>
    <th>Size</th>
    <th>Modified</th>
    <th>Uploaded By</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for asset in @assets %>
    <tr>
      <td><%= link_to asset.file_name, download_url(asset) %></td>
      <td><%= number_to_human_size(asset.file_size, :precision => 2)%></td>
      <td><%= asset.uploaded_file_updated_at %></td>
      <td><%= User.find(asset.user_id).username %></td>
      <td><%= link_to "Show", asset %></td>
      <td><%= link_to "Edit", edit_asset_path(asset) %></td>
      <td><%= link_to "Destroy", asset, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<a href="/assets/new" class="btn">Upload</a>
